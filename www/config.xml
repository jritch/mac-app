<?xml version='1.0' encoding='utf-8'?>
<widget id="com.manas4.manas4.afc" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>AgeCAP</name>
    <description>
        This is the new version of Age-CAP - an assistive app for seniors
    </description>
    <author email="jacob.ritchie@mail.utoronto.ca" href="http://iatsl.org">
        IATSL
    </author>
    <feature name="http://api.phonegap.com/1.0/device" />
    <feature name="http://api.phonegap.com/1.0/geolocation" />
    <preference name="permissions" value="none" />
    <preference name="phonegap-version" value="2.7.0" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-installLocation" value="auto" />
    <icon src="icon.png" />
    <icon gap:platform="ios" height="57" src="img/icons/ios/icon57.png" width="57" />
    <icon gap:platform="ios" height="72" src="img/icons/ios/icon72.png" width="72" />
    <icon gap:platform="ios" height="114" src="img/icons/ios/icon114.png" width="114" />
    <icon gap:platform="ios" height="144" src="img/icons/ios/icon144.png" width="144" />
    <icon gap:density="ldpi" gap:platform="android" src="img/icons/android/ldpi.png" />
    <icon gap:density="mdpi" gap:platform="android" src="img/icons/android/mdpi.png" />
    <icon gap:density="hdpi" gap:platform="android" src="img/icons/android/hdpi.png" />
    <icon gap:density="xhdpi" gap:platform="android" src="img/icons/android/xhdpi.png" />
    <icon gap:platform="blackberry" src="img/icons/bb/icon.png" />
    <icon gap:platform="blackberry" gap:state="hover" src="img/icons/bb/icon_hover.png" />
    <icon gap:platform="winphone" src="img/icons/winphone/icon.png" />
    <icon gap:platform="winphone" gap:role="background" src="img/icons/winphone/tileicon.png" />
    <icon gap:platform="webos" src="img/icons/webos/icon.png" />
    <icon gap:platform="webos" gap:role="mini" src="img/icons/webos/miniicon.png" />
    <gap:splash src="splash.png" />
    <gap:splash gap:platform="ios" height="480" src="img/splash/ios/splash320x480.png" width="320" />
    <gap:splash gap:platform="ios" height="960" src="img/splash/ios/splash640x960.png" width="640" />
    <gap:splash gap:platform="ios" height="1136" src="img/splash/ios/splash640x1136.png" width="640" />
    <gap:splash gap:platform="ios" height="768" src="img/splash/ios/splash1024x768.png" width="1024" />
    <gap:splash gap:platform="ios" height="1024" src="img/splash/ios/splash768x1024.png" width="768" />
    <gap:splash gap:platform="ios" height="1496" src="img/splash/ios/splash2048x1496.png" width="2048" />
    <gap:splash gap:platform="ios" height="2008" src="img/splash/ios/splash1536x2008.png" width="1536" />
    <gap:splash gap:density="ldpi" gap:platform="android" src="img/splash/android/ldpi.png" />
    <gap:splash gap:density="mdpi" gap:platform="android" src="img/splash/android/mdpi.png" />
    <gap:splash gap:density="hdpi" gap:platform="android" src="img/splash/android/hdpi.png" />
    <gap:splash gap:density="xhdpi" gap:platform="android" src="img/splash/android/xhdpi.png" />
    <gap:splash gap:platform="blackberry" src="img/splash/bb/splash.png" />
    <gap:splash gap:platform="winphone" src="img/splash/winphone/splash.jpg" />
    <gap:splash gap:platform="webos" src="img/splash/webos/splash.png" />
    <access origin="*" />
    <content src="index.html" />
</widget>
